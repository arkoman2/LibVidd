<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextNamee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter the new name"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="19dp" />

    <EditText
        android:id="@+id/editTextPasswordUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter the new name"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="19dp"
        android:layout_below="@+id/editTextNamee"/>

    <Button
        android:id="@+id/UpdateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerGanres"
        android:text="Update"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="65dp" />

    <Spinner
        android:id="@+id/spinnerGanres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextPasswordUp"
        android:entries="@array/genres" />

    <Button
        android:id="@+id/DeleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpdateBtn"
        android:layout_centerHorizontal="true"
        android:text="Delete" />
</RelativeLayout>